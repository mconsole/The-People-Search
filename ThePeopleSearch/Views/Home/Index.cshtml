@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="titleFrame" class="mt5">
    <h1 id="title">The People Search</h1>
</div>

<div class="input-group mt5">
    <input id="userSearchInput" type="text" class="h40 form-control" placeholder="Search users">
    <input type="image" id="searchClickFrame" class="h40 inputBtn inputBtnFrame" src="~/Content/Images/search.png" />
    <input type="image" id="addNewUserBtn" class="h40 inputBtn inputBtnFrame" src="~/Content/Images/addUser.png" data-toggle="modal" data-target="#addUserForm" />
</div>

<!-- Modal -->
<div class="modal fade" id="addUserForm" tabindex="-1" role="dialog" aria-labelledby="modalTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Add New User</h5>
            </div>
            <div class="modal-body">
                <form id="newUserForm">
                    <div class="form-group">
                        <label for="firstNameInput">First Name*</label>
                        <input required type="text" class="form-control" id="firstNameInput" aria-describedby="emailHelp" placeholder="First Name">
                    </div>
                    <div class="form-group">
                        <label for="lastNameInput">Last Name*</label>
                        <input required type="text" class="form-control" id="lastNameInput" aria-describedby="emailHelp" placeholder="Last Name">
                    </div>
                    <div class="form-group">
                        <label for="addressInput">Street Address*</label>
                        <input required type="text" class="form-control" id="addressInput" aria-describedby="emailHelp" placeholder="Street Address">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="interestsInput">Interests</label>
                            <select required multiple class="form-control" id="interestsInput"></select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="ageInput">Age*</label>
                            <input required type="text" class="form-control" id="ageInput" maxlength="3" placeholder="Age">
                            <label for="inputState">Country*</label>
                            <select required id="inputCountry" class="form-control"></select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputCity">City*</label>
                            <input required type="text" class="form-control" id="inputCity" placeholder="City">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputState">State*</label>
                            <select required id="inputState" class="form-control"></select>
                        </div>
                        <div class="form-group col-md-2">
                            <label for="inputZip">Zip*</label>
                            <input required type="text" class="form-control" id="inputZip" maxlength="5" placeholder="Zip">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="userImageUpload">User Image</label>
                        <input type="file" class="form-control-file" id="userImageUpload">
                    </div>
                </form>
                <div class="modal-footer">
                    <button id="userCancelBtn" type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button id="userSubmitBtn" type="submit" onclick="submitNewUserData()" class="btn btn-primary">Add</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-md-12 row mt2" id="userList">
    &nbsp;
</div>

<br style="clear: both;" />

@section Scripts {
    <script type="text/javascript">

        var _host = "@ViewBag.Host";

    </script>    
}
@Scripts.Render("~/bundles/site/index")

